extends Node2D

var selected1 = false

func _physics_process_one(delta):
	if selected1 == true:
		$lock1.position = lerp(global_position, get_global_mouse_position(), 25* delta)
		
func _on_lock1_input_event(viewport, event, shape_idx):
	if Input.is_action_just_pressed("click"):
		selected1 = true

func _on_lock2_input_event(viewport, event, shape_idx):
	if event is InputEventMouseButton:
		if event.button_index == BUTTON_LEFT and event.pressed:
			emit_signal("dragsignal")
		elif event.button_index == BUTTON_LEFT and !event.pressed:
			emit_signal("dragsignal")
	elif event is InputEventScreenTouch:
		if event.pressed and event.get_index() == 0:
			self.position = event.get_position()


